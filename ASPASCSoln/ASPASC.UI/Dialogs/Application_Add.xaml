<Window x:Class="ASPASC.UI.Dialogs.Application_Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Application" Height="100" Width="335" WindowStartupLocation="CenterScreen" Icon="/ASPASC.UI;component/Images/ASPASC.png">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Application Name:"/>
                <TextBox Name="tbApplicationName" Width="200" />
            </StackPanel>
            <Button HorizontalAlignment="Center" Name="btnAdd" Content="Add" Width="100" Click="btnAdd_Click" />
        </StackPanel>
    </Grid>
</Window>
